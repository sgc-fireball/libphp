{
  "name": "sgc-fireball/libphp",
  "description": "General useful PHP7 Library",
  "keywords": [
    "php",
    "library"
  ],
  "homepage": "https://www.hrdns.de",
  "authors": [
    {
      "name": "Richard Huelsberg",
      "email": "rh+github@hrdns.de",
      "homepage": "https://www.hrdns.de",
      "role": "Developer"
    }
  ],
  "support": {
    "email": "rh+github@hrdns.de"
  },
  "type": "library",
  "require": {
    "php": ">=7.0",
    "psr/log": "~1.0",
    "symfony/console": "~3.0"
  },
  "require-dev": {
    "phpunit/phpunit": "@stable",
    "squizlabs/php_codesniffer": "@stable",
    "phploc/phploc": "@stable",
    "pdepend/pdepend": "@stable",
    "phpmd/phpmd": "@stable",
    "sebastian/phpcpd": "@stable",
    "theseer/phpdox": "@stable"
  },
  "suggest": {
    "monolog/monolog": "Allow you a better debbuging",
    "php-console/php-console": "Allow you to debug php code in the browser"
  },
  "autoload": {
    "psr-4": {
      "HRDNS\\": "src/HRDNS",
      "HRDNS\\Tests\\": "tests/HRDNS",
      "HRDNS\\Examples\\": "examples/HRDNS"
    }
  },
  "scripts": {
    "test": [
      "phpcs --config-set ignore_warnings_on_exit 1",
      "phpcs",
      "phpunit",
      "phpcpd src/"
    ],
    "check": [
      "phpmd src/ text cleancode,codesize,controversial,design,naming,unusedcode --suffixes php",
      "@test"
    ]
  },
  "config": {
    "bin-dir": "bin",
    "platform": {
      "php": "7.0.0"
    }
  }
}
