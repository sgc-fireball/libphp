{
  "name": "sgc-fireball/libphp",
  "description": "General useful PHP Library",
  "keywords": ["php", "library"],
  "homepage": "https://www.hrdns.de",
  "authors": [
    {
      "name": "Richard Huelsberg",
      "email": "rh+github@hrdns.de",
      "homepage": "https://www.hrdns.de",
      "role": "Developer"
    }
  ],
  "support": {
    "email": "rh+github@hrdns.de"
  },
  "type": "library",
  "require": {
    "php": ">=5.5.9",
    "psr/log": "~1.0"
  },
  "require-dev": {
    "phpunit/phpunit": "*",
    "squizlabs/php_codesniffer": "~2.5",
    "sebastian/phpcpd": "~2.0"
  },
  "suggest": {
    "monolog/monolog": "Allow you a better debbuging",
    "php-console/php-console": "Allow you to debug php code in the browser"
  },
  "autoload": {
    "psr-4": {
      "HRDNS\\": "src/HRDNS"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "HRDNS\\": "src/HRDNS",
      "HRDNS\\Tests\\": "tests/HRDNS"
    }
  },
  "scripts": {
    "test": [
      "phpcs",
      "phpunit"
    ]
  }
}
